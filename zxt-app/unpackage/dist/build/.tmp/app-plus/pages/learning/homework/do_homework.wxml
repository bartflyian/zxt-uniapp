<view class="do-homework"><view class="homework-head"><text data-event-opts="{{[['tap',[['showBackTipBox']]]]}}" class="close-btn" bindtap="__e"></text><text class="page-prv"><text class="now-current">{{currentNum+1}}</text><text class="allnum">{{"/"+testNum}}</text></text><text data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="homework-btn" bindtap="__e"></text></view><view class="homework-content"><swiper class="swiper" style="height:100%;" current="{{currentNum}}" indicator-dots="{{indicatorDots}}" interval="{{interval}}" data-event-opts="{{[['change',[['swiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{testData}}" wx:for-item="test" wx:for-index="index" wx:key="index"><swiper-item><view class="swiper-item"><view class="test-content"><answerinput vue-id="{{'1-'+index}}" data="{{test}}" status="notdeal" data-event-opts="{{[['^changeAnswer',[['changeAnswer']]]]}}" bind:changeAnswer="__e" bind:__l="__l"></answerinput></view><block wx:if="{{test.subquestion.length>0}}"><subquestionswiper vue-id="{{'2-'+index}}" data="{{test}}" status="notdeal" data-event-opts="{{[['^changeSubAnswer',[['changeSubAnswer']]]]}}" bind:changeSubAnswer="__e" bind:__l="__l"></subquestionswiper></block></view></swiper-item></block></swiper></view><view hidden="{{!(answerCardShow)}}" class="answer-card"><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="card-bg" bindtap="__e"></view><view class="card-content"><view class="card-header"><text class="title">答题卡</text><text data-event-opts="{{[['tap',[['e2',['$event']]]]]}}" class="close-btn" bindtap="__e"></text></view><view class="option-box"><block wx:for="{{testData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="opt-li"><view data-event-opts="{{[['tap',[['slideToTest',[index]]]]]}}" class="{{['opt',(answerData[index].done)?'done':'']}}" bindtap="__e">{{index+1>9?index+1:'0'+(index+1)}}</view></view></block></view><text class="not-deal-tip">你还有题目没完成哦！确认提交吗？</text><button class="upload-homework">提交作业</button></view></view><block wx:if="{{backTipBoxShow}}"><view class="back-tip-box"><view data-event-opts="{{[['tap',[['e3',['$event']]]]]}}" class="tip-bg" bindtap="__e"></view><view class="tip-content"><view data-event-opts="{{[['tap',[['e4',['$event']]]]]}}" bindtap="__e"><button class="btn">继续做题</button></view><view data-event-opts="{{[['tap',[['saveHomework',['$event']]]]]}}" bindtap="__e"><button class="btn">保存作业</button></view><view data-event-opts="{{[['tap',[['back']]]]}}" bindtap="__e"><button class="btn">退出作业</button></view></view></view></block></view>